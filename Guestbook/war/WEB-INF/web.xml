<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
    <servlet>
        <servlet-name>guestbook</servlet-name>
        <servlet-class>guestbook.GuestbookServlet</servlet-class>
        <jsp-file>/post.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>guestbook</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>postlist</servlet-name>
        <servlet-class>guestbook.PostListServlet</servlet-class>
        <jsp-file>/postlist.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>postlist</servlet-name>
        <url-pattern>/postlist</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>guestbook.jsp</welcome-file>
    </welcome-file-list>

    
    
    <servlet>
    <servlet-name>sign</servlet-name>    
    <servlet-class>guestbook.SignGuestbookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sign</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>

    <servlet>
    	<servlet-name>subscribe</servlet-name>    
    	<servlet-class>guestbook.MakeEmailList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>subscribe</servlet-name>
        <url-pattern>/subscribe</url-pattern>
    </servlet-mapping>
    
    <servlet>
		<servlet-name>CronServlet</servlet-name>
		<servlet-class>guestbook.CronServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CronServlet</servlet-name>
		<url-pattern>/cronjob</url-pattern>
	</servlet-mapping>
	
	

</web-app>
